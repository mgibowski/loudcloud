# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /about                          controllers.Application.about
POST    /room/new                       controllers.Application.createRoom
GET     /room/:id                       controllers.Application.enterRoom(id: String)
GET     /room/:id/ws                    controllers.Application.roomWS(id: String)

GET     /assets/javascripts/scClientId.js          controllers.Application.soundCloudClientId
GET     /assets/javascripts/scClientId.min.js      controllers.Application.soundCloudClientId
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)